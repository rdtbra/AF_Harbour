#define F_NAME 1

PROCEDURE Main()
   LOCAL aFile

   FOR EACH aFile IN Directory( hb_osFileMask() )
      IF Right( aFile[ F_NAME ], 2 ) == ".c" .OR. ;
         Right( aFile[ F_NAME ], 4 ) == ".prg"

         hb_MemoWrit( aFile[ F_NAME ], __hbdoc_FilterOut( MemoRead( aFile[ F_NAME ] ) ) )
      ENDIF
   NEXT

   RETURN
